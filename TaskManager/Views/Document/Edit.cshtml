@using TaskManager.ViewModel
@model EditDocumentViewModel

@{
    ViewData["Title"] = "Редактирование";
}

<h1>Редактирование</h1>

<hr />

<!-- Форма добавления нового документа -->
<div class="card mb-4 mt-5">
    <div class="card-header">
        <h5 class="mb-0">Добавить новый документ</h5>
    </div>
    <div class="card-body">
        <form method="post" asp-action="Edit" asp-controller="Document" class="row g-3">
            <input type="hidden" asp-for="Document.Id" />

            <!-- Исходные данные документа -->
            <div class="col-12">
                <h6 class="border-bottom pb-2">Исходные данные документа</h6>
            </div>

            <div class="col-md-4">
                <div class="d-flex align-items-center gap-2">
                    <label class="form-label mb-0" style="min-width: 40px;">Исх.</label>
                    <input type="text" class="form-control" asp-for="Document.SourceOutgoingDocumentNumber" required>
                </div>
            </div>

            <div class="col-md-4">
                <input type="date" class="form-control" asp-for="Document.SourceOutgoingDocumentDate" required>
            </div>

            <div class="col-md-4">
                <div class="d-flex align-items-center gap-2">
                    <label class="form-label mb-0" style="min-width: 80px;">Заказчик</label>
                    <input type="text" class="form-control" asp-for="Document.SourceCustomer" required>
                </div>
            </div>

            <div class="col-12">
                <textarea class="form-control" asp-for="Document.SourceTaskText" rows="3" required></textarea>
            </div>

            <div class="col-12">
                <div class="row align-items-center g-3">
                    <div class="col-auto">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" asp-for="Document.SourceIsExternal">
                            <label class="form-check-label">
                                Внешний документ
                            </label>
                        </div>
                    </div>

                    <div class="col">
                        <div class="d-flex align-items-center gap-2">
                            <label class="form-label mb-0" style="min-width: 30px;">Вх.</label>
                            <input type="text" class="form-control" asp-for="Document.SourceOutputDocumentNumber" required>
                        </div>
                    </div>

                    <div class="col">
                        <input type="date" class="form-control" asp-for="Document.SourceOutputDocumentDate" required>
                    </div>

                    <div class="col">
                        <div class="d-flex align-items-center gap-2">
                            <label class="form-label mb-0" style="min-width: 120px;">Выполнить до</label>
                            <input type="date" class="form-control" asp-for="Document.SourceDueDate" required>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12">
                <div class="d-flex align-items-center gap-2">
                    <label class="form-label" style="min-width: 200px;">Ответственный сотрудник</label>
                    <select asp-for="Document.SourceResponsibleEmployeeId"
                            asp-items="Model.Employees"
                            class="form-select"
                            required>
                        <option value="">Выберите сотрудника</option>
                    </select>
                </div>
            </div>

            <div class="col-12 mt-4">
                <h6 class="border-bottom pb-2">Выходные данные документа</h6>
            </div>

            <div class="col-md-4">
                <div class="d-flex align-items-center gap-2">
                    <label class="form-label mb-0" style="min-width: 40px;">Исх.</label>
                    <input type="text" class="form-control" asp-for="Document.OutputOutgoingNumber">
                </div>
            </div>

            <div class="col-md-4">
                <input type="date" class="form-control" asp-for="Document.OutputOutgoingDate">
            </div>

            <div class="col-md-4">
                <div class="d-flex align-items-center gap-2">
                    <label class="form-label mb-0" style="min-width: 130px;">Кому направлен</label>
                    <input type="text" class="form-control" asp-for="Document.OutputSentTo">
                </div>
            </div>

            <div class="col-md-12">
                <div class="d-flex align-items-center gap-2">
                    <label class="form-label" style="min-width: 230px">Передача в рабочем порядке</label>
                    <input type="text" class="form-control" asp-for="Document.OutputTransferredInWorkOrder" id="OutputTransferredInWorkOrder" name="OutputTransferredInWorkOrder">
                </div>
            </div>

            <div class="col-md-12">
                <div class="d-flex align-items-center gap-2">
                    <label class="form-label" style="min-width: 230px">Признак сдачи ответа</label>
                    <input type="text" class="form-control" asp-for="Document.OutputResponseSubmissionMark" id="OutputResponseSubmissionMark" name="OutputResponseSubmissionMark">
                </div>
            </div>

            <div class="col-12 mt-4">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="Document.IsUnderControl">
                        <label class="form-check-label text-uppercase fw-bold" for="Document_IsUnderControl">
                            На контроле
                        </label>
                    </div>

                    <button type="submit" class="btn btn-success">Сохранить</button>
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
