@using TaskManager.ViewModel
@model IndexDocumentViewModel

@{
    ViewData["Title"] = "Документы";
}

<h1>Документы</h1>

@if (Model.Documents.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Исх(внешн)
                </th>
                <th>
                    Вх(46 ЦНИИ)
                </th>
                <th>
                    Тема задания
                </th>
                <th>
                    Срок
                </th>
                <th>
                    Исполнитель
                </th>
                <th>
                    Исх. №
                </th>
                <th>
                    Исх. дата
                </th>
                <th>
                    Действия
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var document in Model.Documents)
            {
                <tr>
                    <td>
                        @document.SourceOutgoingDocumentNumber
                    </td>
                    <td>
                        @document.SourceOutputDocumentNumber
                    </td>
                    <td>
                        @document.SourceTaskText
                    </td>
                    <td>
                        @document.SourceDueDate
                    </td>
                    <td>
                        @document.SourceResponsibleEmployee.FullName
                    </td>
                    <td>
                        @document.OutputOutgoingNumber
                    </td>
                    <td>
                        @document.OutputOutgoingDate
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@document.Id">Редактировать</a> |
                        <a asp-action="Delete" asp-route-id="@document.Id">Удалить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h2>По вашему запросу ничего не найдено</h2>
}


<!-- Форма добавления нового документа -->
<div class="card mb-4 mt-5">
    <div class="card-header">
        <h5 class="mb-0">Добавить новый документ</h5>
    </div>
    <div class="card-body">
        <form method="post" asp-action="Create" asp-controller="Document" class="row g-3">
            <!-- Исходные данные документа -->
            <div class="col-12">
                <h6 class="border-bottom pb-2">Исходные данные документа</h6>
            </div>

            <div class="col-md-4">
                <div class="d-flex align-items-center gap-2">
                    <label class="form-label mb-0">Исх.</label>
                    <input type="text" class="form-control" name="SourceOutgoingDocumentNumber" required>
                </div>
            </div>

            <div class="col-md-4">
                <input type="date" class="form-control" name="SourceOutgoingDocumentDate" required>
            </div>

            <div class="col-md-4">
                <div class="d-flex align-items-center gap-2">
                    <label class="form-label mb-0">Заказчик</label>
                    <input type="text" class="form-control" name="SourceCustomer" required>
                </div>
            </div>

            <div class="col-12">
                <textarea class="form-control" name="SourceTaskText" rows="3" required></textarea>
            </div>

            <div class="col-12">
                <div class="row align-items-center g-3">
                    <div class="col-auto">
                        <div class="form-check">
                            <input type="hidden" name="SourceIsExternal" value="false" />
                            <input class="form-check-input" type="checkbox" name="SourceIsExternal" value="true">
                            <label class="form-check-label">
                                Внешний документ
                            </label>
                        </div>
                    </div>

                    <div class="col">
                        <div class="d-flex align-items-center gap-2">
                            <label class="form-label mb-0" style="min-width: 30px;">Вх.</label>
                            <input type="text" class="form-control" name="SourceOutputDocumentNumber" required>
                        </div>
                    </div>

                    <div class="col">
                        <input type="date" class="form-control" name="SourceOutputDocumentDate" required>
                    </div>

                    <div class="col">
                        <div class="d-flex align-items-center gap-2">
                            <label class="form-label mb-0" style="min-width: 120px;">Выполнить до</label>
                            <input type="date" class="form-control" name="SourceDueDate" required>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12">
                <div class="d-flex align-items-center gap-1">
                    <label class="form-label" style="min-width: 215px;">Ответственный сотрудник</label>
                    <select name="SourceResponsibleEmployeeId"
                            asp-items="Model.Employees"
                            class="form-select"
                            required>
                        <option value="">Выберите сотрудника</option>
                    </select>
                </div>
            </div>

            <!-- Выходные данные документа -->
            <div class="col-12 mt-4">
                <h6 class="border-bottom pb-2">Выходные данные документа</h6>
            </div>

            <div class="col-md-4">
                <div class="d-flex align-items-center gap-2">
                    <label class="form-label mb-0">Исх.</label>
                    <input type="text" class="form-control" name="OutputOutgoingNumber">
                </div>
            </div>

            <div class="col-md-4">
                <input type="date" class="form-control" name="OutputOutgoingDate">
            </div>

            <div class="col-md-4">
                <div class="d-flex align-items-center gap-2">
                    <label class="form-label mb-0" style="min-width: 130px;">Кому направлен</label>
                    <input type="text" class="form-control" name="OutputSentTo">
                </div>
            </div>

            <div class="col-md-12">
                <div class="d-flex align-items-center gap-2">
                    <label class="form-label" style="min-width: 230px">Передача в рабочем порядке</label>
                    <input type="text" class="form-control" name="OutputTransferredInWorkOrder">
                </div>
            </div>

            <div class="col-md-12">
                <div class="d-flex align-items-center gap-2">
                    <label class="form-label" style="min-width: 230px">Признак сдачи ответа</label>
                    <input type="text" class="form-control" name="OutputResponseSubmissionMark">
                </div>
            </div>

            <div class="col-12">
                <div class="d-flex justify-content-between">
                    <input type="hidden" name="IsUnderControl" value="false" />
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="IsUnderControl" value="true">
                        <label class="form-check-label text-uppercase">
                            На контроле
                        </label>
                    </div>
                    <button type="submit" class="btn btn-success">Сохранить</button>
                </div>
            </div>
        </form>
    </div>
</div>