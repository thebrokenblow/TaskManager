@using TaskManager.Models
@using TaskManager.Services
@using TaskManager.ViewModel
@using TaskManager.Services.Interfaces

@model EditDocumentViewModel
@inject IAuthService authService

@{
    ViewData["Title"] = "Редактирование Документа";

    if (ViewData[nameof(EmployeeForSelect)] is not SelectList selecListEmployees)
    {
        throw new Exception();
    }

    var isNotReadonly = !Model.Document.IsCompleted && (authService.IsAdmin || authService.CurrentUserId == Model.Document.IdAuthorCreateDocument);
}

<style>
    .readonly-disabled {
        background-color: #e9ecef;
        opacity: 1;
        pointer-events: none;
        cursor: not-allowed;
    }

    .readonly-disabled::placeholder {
        color: #6c757d;
    }
</style>

<!-- Форма редактирования документа -->
<div class="card mb-4 mt-5">
    <div class="card-header">
        <h5 class="mb-0">Добавить новый документ</h5>
    </div>
    <div class="card-body">
        <form method="post" asp-action="Create" class="row g-3" id="documentForm">
            <!-- Исходные данные документа -->
            <div class="col-12">
                <h6 class="border-bottom pb-2">Исходные данные документа</h6>
            </div>

            <div class="col-md-4">
                <div class="d-flex align-items-center gap-2">
                    <label class="form-label mb-0 text-nowrap">Исх.:</label>
                    <input type="text" class="form-control" asp-for="@Model.Document.SourceOutgoingDocumentNumber">
                </div>
            </div>

            <div class="col-md-4">
                <div class="d-flex align-items-center gap-2">
                    <label class="form-label mb-0 text-nowrap">Дата:</label>
                    <input type="date" class="form-control" asp-for="@Model.Document.SourceOutgoingDocumentDate">
                </div>
            </div>

            <div class="col-md-4">
                <div class="d-flex align-items-center gap-2">
                    <label class="form-label mb-0 text-nowrap">Заказчик:</label>
                    <input type="text" class="form-control" asp-for="@Model.Document.SourceCustomer">
                </div>
            </div>

            <div class="col-12">
                <textarea class="form-control" placeholder="Краткое содержание документа" asp-for="@Model.Document.SourceTaskText" rows="3"></textarea>
            </div>

            <div class="col-12">
                <div class="row align-items-center g-3">
                    <div class="col-auto">
                        <div class="form-check">
                            <input class="form-check-input" asp-for="@Model.Document.SourceIsExternal" id="SourceIsExternal" />
                            <label class="form-check-label" asp-for="@Model.Document.SourceIsExternal">
                                Внешний документ
                            </label>
                        </div>
                    </div>

                    <div class="col">
                        <div class="d-flex align-items-center gap-2">
                            <label class="form-label mb-0 text-nowrap">Вх (46 ЦНИИ): *</label>
                            <input type="text" class="form-control" asp-for="@Model.Document.SourceOutputDocumentNumber" id="SourceOutputDocumentNumber" required>
                        </div>
                    </div>

                    <div class="col">
                        <div class="d-flex align-items-center gap-2">
                            <label class="form-label mb-0 text-nowrap">Дата: *</label>
                            <input type="date" class="form-control" asp-for="@Model.Document.SourceOutputDocumentDate" required>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Остальная часть формы без изменений -->
            <div class="col-12">
                <div class="d-flex align-items-center gap-2 w-100">
                    <div class="d-flex align-items-center gap-2 flex-fill">
                        <label class="form-label mb-0 text-nowrap">Отвественный (-ые) отдел (-ы):</label>
                        <input type="text" class="form-control" asp-for="@Model.Document.SourseResponsibleDepartment">
                    </div>
                    <div class="d-flex align-items-center gap-2 flex-fill">
                        <label class="form-label mb-0 text-nowrap">Выполнить до: *</label>
                        <input type="date" class="form-control" asp-for="@Model.Document.SourceDueDate" required>
                    </div>
                </div>
            </div>

            <div class="col-12">
                <div class="d-flex align-items-center gap-2">
                    <label class="form-label mb-0 text-nowrap">Ответственный сотрудник:</label>
                    <select asp-for="@Model.Document.IdAuthorCreateDocument"
                            class="form-control"
                            asp-items="@Model.Employees">
                        <option value="">Выберите сотрудника</option>
                    </select>
                </div>
            </div>

            <!-- Выходные данные документа -->
            <div class="col-12 mt-4">
                <h6 class="border-bottom pb-2">Выходные данные документа</h6>
            </div>

            <div class="col-12">
                <div class="d-flex align-items-center gap-2">
                    <div class="form-check mb-0">
                        <input class="form-check-input" asp-for="@Model.Document.SourceIsExternal" checked />
                        <label class="form-check-label" asp-for="@Model.Document.SourceIsExternal">
                            Внешний документ
                        </label>
                    </div>
                    <div class="d-flex align-items-center gap-2 flex-fill">
                        <label class="form-label mb-0 text-nowrap">Исх (46 ЦНИИ):</label>
                        <input type="text" class="form-control" asp-for="@Model.Document.OutputOutgoingNumber">
                    </div>

                    <div class="d-flex align-items-center gap-2 flex-fill">
                        <label class="form-label mb-0 text-nowrap">Дата:</label>
                        <input type="date" class="form-control" asp-for="@Model.Document.OutputOutgoingDate">
                    </div>

                    <div class="d-flex align-items-center gap-2 flex-fill">
                        <label class="form-label mb-0 text-nowrap">Получатель:</label>
                        <input type="text" class="form-control" asp-for="@Model.Document.OutputSentTo">
                    </div>
                </div>
            </div>

            <div class="col-12">
                <div class="d-flex align-items-center gap-2">
                    <textarea placeholder="Краткое содержание документа" class="form-control" asp-for="@Model.Document.OutputContentAnswer"></textarea>
                </div>
            </div>

            <div class="col-12">
                <div class="d-flex justify-content-between">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="@Model.Document.IsUnderControl" />
                        <label class="form-check-label text-uppercase" asp-for="@Model.Document.IsUnderControl">
                            На контроле
                        </label>
                    </div>
                    <div>
                        <button type="submit" class="btn btn-success">Создать</button>
                        <a asp-action="Index" class="btn btn-secondary">Назад к списку</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            console.log('DOM loaded');

            const externalCheckbox = document.getElementById('SourceIsExternal');
            const outputDocumentInput = document.getElementById('SourceOutputDocumentNumber');

            console.log('Checkbox found:', externalCheckbox);
            console.log('Input found:', outputDocumentInput);

            if (!externalCheckbox || !outputDocumentInput) {
                console.error('Elements not found!');
                return;
            }

            function updateOutputDocumentField() {
                console.log('Checkbox changed, checked:', externalCheckbox.checked);
                console.log('Current input value:', outputDocumentInput.value);

                if (externalCheckbox.checked) {
                    // Если внешний документ - разрешаем ввод
                    outputDocumentInput.removeAttribute('readonly');
                    outputDocumentInput.classList.remove('readonly-disabled');
                    outputDocumentInput.placeholder = 'Введите номер документа';

                    // Если текущее значение "нет" - очищаем поле
                    if (outputDocumentInput.value === 'нет') {
                        outputDocumentInput.value = '';
                    }
                } else {
                    // Если не внешний документ - ставим "нет" и блокируем
                    outputDocumentInput.value = 'нет';
                    outputDocumentInput.setAttribute('readonly', 'readonly');
                    outputDocumentInput.classList.add('readonly-disabled');
                    outputDocumentInput.placeholder = 'Автоматически установлено в "нет"';
                }

                console.log('New input value:', outputDocumentInput.value);
            }

            // Обработчик изменения чекбокса
            externalCheckbox.addEventListener('change', updateOutputDocumentField);

            // Инициализация при загрузке страницы
            updateOutputDocumentField();

            console.log('Event listener attached');
        });
    </script>
}